
nmap <F2> :w<CR>
imap <F2> <ESC>:w<CR>i
nmap <F10> :wq<CR>
imap <F10> <ESC>:wq <CR>
set mouse=a
map <ScrollWheelUp> <C-Y>
map <ScrollWheelDown> <C-E>


"" c++ settings
"set enc=utf-8
"set fenc=utf-8
"set termencoding=utf-8
"set nocompatible
"set autoindent
"set smartindent
"set tabstop=4
"set shiftwidth=4
"set expandtab
"set textwidth=120
"set t_Co=256
"syntax on
"set showmatch
"set comments=s1:/*,mb:\ *,elx:\ */
"
"
"" Fortran settings:
let fortran_free_source=1
let fortran_do_enddo=1
filetype plugin indent on
syntax on
set showcmd
set smarttab
set expandtab
set tabstop=2
set shiftwidth=2
set bs=2
set incsearch
set ignorecase
set smartcase
